#include <stdio.h>

int main() {
    // 1. Ділення цілих чисел і виведення результату як float
    int a = 5, b = 2;
    float result = (float)a / b;
    printf("Result of 5 / 2 as float: %.2f\n", result);

    // 2. Оголошення константи типу float та виведення її значення
    const float PI = 3.14f;
    printf("Value of PI: %.2f\n", PI);

    // 3. Виведення ASCII-коду символу
    char ch = 'A';
    printf("Character: %c, ASCII code: %d\n", ch, ch);

    // 4. Введення цілого та дробового числа, виведення їх суми
    int intNum;
    float floatNum;
    printf("Enter an integer: ");
    scanf_s("%d", &intNum);
    printf("Enter a float: ");
    scanf_s("%f", &floatNum);
    float sum = intNum + floatNum;
    printf("Sum: %.2f\n", sum);

    // 5. Зчитування символу і виведення наступного в таблиці ASCII
    char inputChar;
    printf("Enter a character: ");
    scanf_s(" %c", &inputChar); // пробіл перед %c важливий для пропуску whitespace
    char nextChar = inputChar + 1;
    printf("Next ASCII character: %c\n", nextChar);

    return 0;
}
